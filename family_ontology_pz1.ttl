@prefix : <http://example.org/family#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:FamilyOntologyRU a owl:Ontology ;
    rdfs:comment "Простая онтология семьи с русскими именами." .

# Классы
:Человек a owl:Class .
:Взрослый a owl:Class ;
    rdfs:subClassOf :Человек .
:Ребёнок a owl:Class ;
    rdfs:subClassOf :Человек .
:Семья a owl:Class .
:Брак a owl:Class .

# Объектные свойства
:имеетРодителя a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    rdfs:comment "Родитель человека." .

:имеетРебёнка a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    rdfs:comment "Ребёнок человека." ;
    owl:inverseOf :имеетРодителя .

:супруг a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    rdfs:comment "Супруг/супруга; симметричное отношение." .

:участвуетВБраке a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Брак ;
    rdfs:comment "Участие в браке." .

:членСемьи a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Семья ;
    rdfs:comment "Член определённой семьи." .

:имеетСиблинга a owl:ObjectProperty ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    rdfs:comment "Брат или сестра." .

# Data properties
:ФИО a owl:DatatypeProperty ;
    rdfs:domain :Человек ;
    rdfs:range xsd:string .

:датаРождения a owl:DatatypeProperty ;
    rdfs:domain :Человек ;
    rdfs:range xsd:date .

# Дополнительные классы
:Мужчина a owl:Class ;
    rdfs:subClassOf :Человек .
:Женщина a owl:Class ;
    rdfs:subClassOf :Человек .

# Индивиды (персонажи)
:СемьяИвановых a :Семья ;
    rdfs:label "Семья Ивановых" .

:ИванИванов a :Взрослый, :Мужчина ;
    :ФИО "Иван Иванов" ;
    :датаРождения "1980-04-15"^^xsd:date ;
    :членСемьи :СемьяИвановых .

:МарияИванова a :Взрослый, :Женщина ;
    :ФИО "Мария Иванова" ;
    :датаРождения "1983-09-10"^^xsd:date ;
    :членСемьи :СемьяИвановых .

:ПавелИванов a :Ребёнок, :Мужчина ;
    :ФИО "Павел Иванов" ;
    :датаРождения "2010-01-22"^^xsd:date ;
    :членСемьи :СемьяИвановых .

:АняИванова a :Ребёнок, :Женщина ;
    :ФИО "Аня Иванова" ;
    :датаРождения "2014-07-03"^^xsd:date ;
    :членСемьи :СемьяИвановых .

:Брак1 a :Брак ;
    rdfs:label "Брак Ивана и Марии Ивановых" ;
    :участвуетВБраке :ИванИванов, :МарияИванова .

# Отношения
:ИванИванов :супруг :МарияИванова .
:МарияИванова :супруг :ИванИванов .

:ИванИванов :имеетРебёнка :ПавелИванов, :АняИванова .
:МарияИванова :имеетРебёнка :ПавелИванов, :АняИванова .

:ПавелИванов :имеетРодителя :ИванИванов, :МарияИванова .
:АняИванова :имеетРодителя :ИванИванов, :МарияИванова .

:ПавелИванов :имеетСиблинга :АняИванова .
:АняИванова :имеетСиблинга :ПавелИванов .
